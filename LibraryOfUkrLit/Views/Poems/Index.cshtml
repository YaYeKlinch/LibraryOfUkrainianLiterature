@model IEnumerable<LibraryOfUkrLit.Models.Poem>

@{
    ViewData["Title"] = "Poems";
}

<h2>Poems</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountLine)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountLine)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PoemID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PoemID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PoemID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
