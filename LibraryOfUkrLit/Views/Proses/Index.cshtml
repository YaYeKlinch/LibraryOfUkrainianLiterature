@model IEnumerable<LibraryOfUkrLit.Models.Prose>

@{
    ViewData["Title"] = "Proses";
}

<h2>Prose</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Section)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProseID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProseID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProseID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
