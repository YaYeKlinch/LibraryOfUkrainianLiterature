@model IEnumerable<LibraryOfUkrLit.Models.AuthorProse>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Prose)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Prose.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.LastName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AuthorProseID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AuthorProseID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AuthorProseID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
